{
  "name": "transport-tycoon",
  "version": "0.2.0",
  "author": "Michael Roth <mail@mroth.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrothNET/transport-tycoon-exercises.git"
  },
  "homepage": "https://github.com/mrothNET/transport-tycoon-exercises",
  "files": [
    "src/**/*.ts",
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.map",
    "yarn.lock"
  ],
  "bin": {
    "transport-tycoon": "lib/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib",
    "test": "jest --all",
    "watch": "jest --watch",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "tslint -p .",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run lint && npm test",
    "exercise1": "node lib/cli.js exercise1",
    "exercise2": "node lib/cli.js exercise2"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^4.0.1",
    "thenby": "^1.3.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.8",
    "jest": "^24.9.0",
    "prettier": "1.19.1",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "singleQuote": false
  },
  "jest": {
    "roots": [
      "src"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
