{
  "name": "transport-tycoon",
  "version": "0.2.0",
  "author": "Michael Roth <mail@mroth.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrothNET/transport-tycoon-exercises.git"
  },
  "homepage": "https://github.com/mrothNET/transport-tycoon-exercises",
  "files": [
    "src/**/*.ts",
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.map",
    "yarn.lock"
  ],
  "bin": {
    "transport-tycoon": "lib/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib",
    "test": "jest --all",
    "watch": "jest --watch",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "tslint -p .",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run lint && npm test",
    "exercise1": "node lib/cli.js exercise1",
    "exercise2": "node lib/cli.js exercise2"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "commander": "^7.2.0",
    "thenby": "^1.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.3.0",
    "jest": "^26.6.3",
    "prettier": "2.3.0",
    "ts-jest": "^26.5.6",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "singleQuote": false
  },
  "jest": {
    "roots": [
      "exercise1/src",
      "exercise2/src"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
